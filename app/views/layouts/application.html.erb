<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  </head>

  <body>
    <body>
      <div class="sidebar">
        <div class="logo">
          <%= link_to root_path do %>
           <%= image_tag "blog.png" %>
          <% end %>
        </div>
        <ul>
           <!-- blogs resets back to index/home page -->
           <li><%= link_to "Blogs", root_path %></li>
            <% if login_path %>
                <p><%= link_to "Login In", users_path %></p>
                <p><%= link_to "Sign Up", new_user_path(session[:user_id]), :class => "signup" %></p>
              <% else %>
              <%= link_to "New Post", new_post_path %>



            <% end %>
         </ul>
      </div>

       <div id="main_content">
        <div id="header">
         <p>All Posts</p>
          <div class="buttons">
            <!-- <!- click on button to create a new post -->
           <button class="button"><%= link_to "New Post", new_post_path %></button>
           <button class="button"><%= link_to "Log Out", root_path %></button>
         </div>
       </div>
        <!-- flash message for sign in or sign out -->
        <% flash.each do |name, msg, comments| %>
         <% content_tag(:div, msg, class: "alert") %>
        <% end %>
       <%= yield %>
      </div>
  </body>
</html>
