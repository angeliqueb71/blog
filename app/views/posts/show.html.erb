<!-- this is where the actual posts live -->
<!-- want to show the title and  body -->
<div id="post_content">
  <h1 class="title">
    <%= @post.title %>
  </h1>

  <p class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %>
     <% if current_user && current_user.id == post.user.id %>
    <button id="button"><%= link_to 'Edit', edit_post_path(@post) %></button>
    <button id="button"><%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure?'} %></button>
    <% end %>
  </p>


  <p class="body">
    <%= @post.body %>
  </p>

  <div id="comments">
  <%= render @post.comments %>
    <h3>Add a comment</h3>
    <%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :body %>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit %>
    </p>
    <% end %>

    <%= link_to 'Back', posts_path %>
        Submitted <%= time_ago_in_words(@post.created_at) %>

        <p><%= link_to 'Delete', [@post, @post.comments.build],
      								  method: :delete,
      								  class: "button",
      								 	data: { confirm: 'Are you sure?' } %></p>

  </div>
</div>
