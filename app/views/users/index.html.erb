<!-- loops thru each user and display their first and last name -->


  <%= form_for :user, url: users_path do |f| %>
      <p>login</p>
      <p><%= f.email_field :email, placeholder: "Email", class: "field", required: true  %></p>
      <p><%= f.password_field :password, placeholder: "Password", class: "field", required: true %></p>
      <p><%= f.submit value: "SUBMIT", class: "button" %></p>
    <% end %>


    <p>
        <% if current_user && current_user.id == user.id %>
        | <%= link_to("EDIT", edit_user_path(user.id)) %>
        | <%= link_to("DELETE", user_path(user.id), method: :delete, data: {confirm: 'Are you sure?'}) %>
      <% end %>
    </p>
